# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration - Read-only connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_readonly_user
DB_PASSWORD=your_readonly_password
DB_SSL_MODE=prefer

# Database Configuration - Update connection (optional, for embedding generation)
UPDATE_USER=your_update_user
UPDATE_PASSWORD=your_update_password

# Embedding Configuration
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
# Alternative: BAAI/bge-large-en-v1.5

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_ROTATION_INTERVAL_HOURS=24
LOG_RETENTION_DAYS=30
LOG_TO_CONSOLE=true
LOG_TO_FILE=true

# API Configuration
API_BASE_URL=http://localhost:3009
PORT=3009

# Vector Cache Configuration
VECTOR_CACHE_ENABLED=true
VECTOR_CACHE_SIMILARITY_THRESHOLD=0.80
